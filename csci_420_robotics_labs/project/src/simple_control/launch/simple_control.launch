<?xml version="1.0"?>
<launch>

  <arg name="map_width" default="23" />
  <arg name="map_height" default="23" />
  <arg name="seed" default="107" />

  <node name="tower_to_map_node" pkg="simple_control" exec="tower_to_map" output="screen"/>

   <!-- planners -->
<node pkg="simple_control" exec="global_planner" name="global_planner_node" output="screen" on_exit="shutdown"></node>
<node pkg="simple_control" exec="local_planner" name="local_planner_node" output="screen" on_exit="shutdown">
    <param name="map_width" value="$(var map_width)" />
    <param name="map_height" value="$(var map_height)" />
  </node>
<node pkg="simple_control" exec="rescue_mission" name="rescue_mission_node" output="screen" on_exit="shutdown"></node>

</launch>